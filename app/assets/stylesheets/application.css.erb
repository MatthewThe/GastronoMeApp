/* 1024x768 */ 
div#container{width:1000px;}
div#header{width:100%;}
div#content{width:680px;min-height:550px;}

html {min-height:100%; margin-bottom:1px;}

body {
	font-family:Verdana,Arial,Helvetica,sans-serif; 
	font-size:14px; 
	background-color:#111; 
	color:#BBB; 
	background-image:url('<%= asset_path("background_compressed.jpg") %>');
	/*background-attachment:fixed; */
	background-repeat:no-repeat; 
	background-position:center top; 
	margin-top:0px;
}

#container {
	text-align:left;
	margin: 0 auto 0 auto;
}

#header {
	height:100px;
	text-align:left;
	padding-top: 40px;
	padding-left: 20px;
	color:#333;
	border-radius: 25px;
}
#header a		{font-size:14px; color:#DDD}

#content 		{
  text-align:justify; 
  padding: 20px;
  margin-left:320px;
  color: #ddd;
  border:1px solid #000;
  border-radius: 25px;
  background: rgb(197, 172, 216); 
  background: rgba(82, 82, 82, 0.9); 
}
#content a, #content a:visited {color:#eee;}

#leftnav {
  position:absolute; 
  color:#FFF; 
  top:220px; 
  margin-left:40px;
  width:200px; 
}
#leftnav a, #leftnav a:visited {color:#fff; text-decoration: none; position:relative;}
#leftnav a .nav_image { opacity: 0.7; }
#leftnav a:hover .nav_image { opacity: 1.0; }
#leftnav .nav_image {
  border-radius: 15px;
  border:1px solid #000;
  margin-bottom: 20px;
}
#leftnav .nav_text {
  position:absolute; 
  text-align:center; 
  top:-120px; 
  text-shadow: -1px 0 #444, 0 1px #444, 1px 0 #444, 0 -1px #444;
  left: 0px; 
  width: 205px; 
  font-size:24px; 
  color: #fff;
  font-weight: bold;
}

#javascriptcheck{width:100%; height:30px; background-color:#FFF; color:red; position:absolute; top:0px; left:0px; right:0px}

form{margin:0px 0px 0px 0px}
select, option, textarea {
	color:#666; 
	font-size:14px; 
	font-family:Verdana; 
	background-color:#fff;
	border:0px solid #808080;
}
textarea { width: 300px; height: 100px;}

input{
	color:#666; 
	font-size:14px; 
	font-family:Verdana; 
	background-color:#fff;
	border:1px solid #808080;
}
input[type=radio], input[type=checkbox]  { padding: 0px; margin: 2px; background-color: #181818; border: none;}

ul		{list-style:none; margin:0; padding:0}
table	{font-size:14px}
img 	{border: 0px;}

a.n{color:#444;}
a.button { padding: 10px; display: inline-block; border:1px solid #BBB; border-radius: 10px; background-color:#333; text-decoration:none; opacity: 0.8; font-weight:bold;}
a.button:hover { background-color: #222; }

h1 {
  font-size:48px;
  text-align:left;
  margin:5px 0px 5px 0px;
  padding:5px 0px 5px 0px;
  color:#eee;
}
h2{font-size:30px; color: #ddd; text-align:center; margin:5px 0px 5px 0px; padding:5px 0px 5px 0px;  text-shadow: -1px 0 #444, 0 1px #444, 1px 0 #444, 0 -1px #444; }
h3{font-size:20px; text-align:center; margin:10px 0px 10px 0px; padding: 3px 0px 3px 0px; border-bottom:1px solid #BBB;border-top:1px solid #BBB; background-color:#888;opacity:0.7;}
h4{font-size:18px; text-align:center; margin:5px 0px 5px 0px;}
h5{
  font-size:16px; 
  text-align:center; 
  margin:5px 0px 5px 0px; 
  padding: 2px;
  border:1px solid #BBB; 
  background-color:#222;
  border-radius: 10px;
}
h6 {font-size:18px; margin:5px 0px 5px 0px; font-weight:bold;}
h6 a, a:visited {text-decoration:none;}
h6 a:hover {text-decoration:underline;}

div.review_item { margin: 10px 10px; padding: 10px 15px; border:1px solid #BBB; border-radius: 15px; display: block; width: 42%; float: left;}
div.review_wrapper { margin-right: 135px; }
div.review_left { float: left; width: 90%; }
div.review_right { float: right; width: 135px; margin-top: 15px; margin-right:-135px; background-color:#222;border-radius: 15px; padding: 10px;}
a.new_review_button { position:absolute; top: -50px; background-color:#008800; right: 0px;}
a.new_review_button:hover { background-color:#006600;}

a.new_restaurant_button { position:absolute; top: -50px; background-color:#008800; right: 0px;}
a.new_restaurant_button:hover { background-color:#006600;}

p.trail {
	border: 1px dotted #aaa;
	border-top:0px;
	background-color: #222;
	padding: 5px;
	padding-left: 10px;
	margin-top:0px;
}

p.footer {
	border: 1px dotted #aaa;
	border-bottom:0px;
	background-color: #222;
	padding: 5px;
	text-align:center;
	margin-bottom:0px;
}

.hidden 	{display:none;}
.center		{text-align:center;}
.clear		{clear:both;}
.space_4 	{height:4px;}
.space_8 	{height:8px;}
.space_16	{height:16px;}
.relative {position:relative;}
