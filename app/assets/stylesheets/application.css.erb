/* 1024x768 */ 
div#container{width:100%;}
div#header{width:96%;padding-left:4%;height:80px;padding-top:10px;}
div#content{width:calc(100% - 20px);margin-left:0%;padding:10px;}
div#leftnav{position:relative;width:100%;top:0px;}

#leftnav .search_box {width:98%;max-width:330px;margin-bottom:10px;padding:4px;}
#leftnav .search_field { width:calc(100% - 40px); max-width:300px;}
#leftnav a { width: 32.5%; max-width:160px;}
#leftnav a .nav_image { opacity: 0.6; width:100%; max-width: 160px; height: auto;}
#leftnav .nav_text {width:100%; font-size:18px;}

div.review_item {width:calc(100% - 50px);}

div.review_wrapper { margin-right: 0px; }
div.review_left { float: left; width: calc(95% - 20px); padding:10px}
div.review_right { width: 135px; max-width: calc(100% - 20px); background-color:#222;border-radius: 15px; padding: 10px;}

@media (min-width: 800px) {
  div.review_item {width:calc(50% - 52px);}
  div#header{height:100px;padding-top:40px;}
  div#leftnav{position:absolute;width:20%;padding-left:5%;top:150px;}
  #leftnav a { width:100%;}
  #leftnav a .nav_image { width:160px;}
  #leftnav .search_box { width: 152px; margin-bottom:30px; }
  #leftnav .search_field { width:112px;}
  #leftnav .nav_text {font-size:22px;}
  div#content{width:62%;min-height:550px;margin-left:32%;padding:20px}
  
  div.review_wrapper { margin-right: 155px; }
  div.review_right { float: right; margin-top: 15px; margin-right:-155px;}
}

@media (min-width: 1024px) {
  div#container {
    width:1000px;
    margin-left: auto;
    margin-right: auto;
  }
  
  div#header {
	  padding-left: 40px;
  }
}

html {min-height:100%; margin-bottom:1px;}

body {
	font-family:Verdana,Arial,Helvetica,sans-serif; 
	font-size:14px; 
	background-color:#111; 
	color:#BBB; 
	background-image:url('<%= asset_path("background_compressed.jpg") %>');
	/*background-attachment:fixed; */
	background-repeat:no-repeat; 
	background-position:center top; 
	margin-top:0px;
}

#container {
	text-align:left;
	margin: 0 auto 0 auto;
}

#header {
	text-align:left;
	color:#333;
	border-radius: 25px;
}
#header a		{font-size:14px; color:#DDD}

#content 		{
  text-align:justify; 
  color: #ddd;
  border:1px solid #000;
  border-radius: 25px;
  background: rgb(197, 172, 216); 
  background: rgba(82, 82, 82, 0.9); 
}
#content a, #content a:visited {color:#eee;}
input[type=submit] {color:#333;cursor:pointer;}

#leftnav {
  color:#FFF; 
}
#leftnav a, #leftnav a:visited {color:#fff; text-decoration: none; position:relative;display:inline-block;}
#leftnav a:hover .nav_image { opacity: 1.0; }
#leftnav .nav_image {
  border-radius: 15px;
  border:1px solid #000;
  margin-bottom: 10px;
}

#leftnav .nav_text {
  position:absolute;
  top:45%; 
  left:50%;
  transform: translate(-50%, -50%);
  color: #fff;
  font-weight: bold;
  text-align:center; 
  text-shadow: -1px 0 #444, 0 1px #444, 1px 0 #444, 0 -1px #444;
}

#map {
  color: #333;
}

#map a, #map a:visited, #map a:hover {
  color: #333;
}

#javascriptcheck{width:100%; height:30px; background-color:#FFF; color:red; position:absolute; top:0px; left:0px; right:0px}

form{margin:0px 0px 0px 0px}
select, option, textarea {
	color:#666; 
	font-size:14px; 
	font-family:Verdana; 
	background-color:#fff;
	border:0px solid #808080;
}
textarea { width: 100%; height: 100px;}

input{
  width:100%;
  max-width:300px;
	color:#666; 
	font-size:14px; 
	font-family:Verdana; 
	background-color:#fff;
	border:1px solid #808080;
}
input[type=radio], input[type=checkbox]  { padding: 0px; margin: 2px; background-color: #181818; border: none;}

ul		{list-style:none; margin:0; padding:0}
table	{font-size:14px}
img 	{border: 0px;}

a.n{color:#444;}
a.button { padding: 10px; margin:5px 0px; display: inline-block; border:1px solid #BBB; border-radius: 10px; background-color:#333; text-decoration:none; opacity: 0.8; font-weight:bold;}
a.button:hover { background-color: #222; }

a.active_filter {background-color:#3366ff;}
a.active_filter:hover { background-color:#0040ff;}

h1 {
  font-size:48px;
  text-align:left;
  margin:5px 0px 5px 0px;
  padding:5px 0px 5px 0px;
  color:#eee;
}
h2{font-size:30px; color: #ddd; text-align:left; margin:5px 0px 5px 0px; padding:5px 0px 5px 10px;  text-shadow: -1px 0 #444, 0 1px #444, 1px 0 #444, 0 -1px #444; }
h3{font-size:20px; text-align:left; margin:10px 0px 10px 0px; padding: 3px 0px 3px 10px; border-bottom:1px solid #BBB;}
h4{font-size:18px; text-align:center; margin:5px 0px 5px 0px;}
h5{
  font-size:16px; 
  text-align:center; 
  margin:5px 0px 5px 0px; 
  padding: 2px;
  border:1px solid #BBB; 
  background-color:#222;
  border-radius: 10px;
}
h6 {font-size:18px; margin:5px 0px 5px 0px; font-weight:bold;}
h6 a, a:visited {text-decoration:none;}
h6 a:hover {text-decoration:underline;}

div.review_item { margin: 10px; padding: 10px 15px; border:1px solid #BBB; border-radius: 15px; display: block; float: left;}

a.new_review_button { position:absolute; top: -50px; background-color:#008800; right: 0px;}
a.new_review_button:hover { background-color:#006600;}

#float_menu { position:absolute; top: -50px; right: 0px;vertical-align:middle; }
a.new_restaurant_button {background-color:#008800;}
a.new_restaurant_button:hover { background-color:#006600;}
.search_box { display:block; float:left; border-radius: 10px; border: 1px solid #bbb; }
.search_field { display:block; float:left; padding: 5px; border-radius: 5px; }
.search_submit { 
  background-image: url(<%= asset_path("search_icon.png") %>);
  background-repeat:no-repeat;
  background-size: contain;
  width: 20px;
  height: 20px;
  border-radius: 5px;
  border: 0px;
  margin: 3px;
  display:block; float:left;
}

p.trail {
	border: 1px dotted #aaa;
	border-top:0px;
	background-color: #222;
	padding: 5px;
	padding-left: 10px;
	margin-top:0px;
}

p.footer {
	border: 1px dotted #aaa;
	border-bottom:0px;
	background-color: #222;
	padding: 5px;
	text-align:center;
	margin-bottom:0px;
}

.hidden 	{display:none;}
.center		{text-align:center;}
.clear		{clear:both;}
.space_4 	{height:4px;}
.space_8 	{height:8px;}
.space_16	{height:16px;}
.relative {position:relative;}
.float    {display:block; float:left;}
