<h2>Restaurants</h2>
<div class="relative">
  <div id="float_menu">
    <div class="search_box"><%= form_tag restaurants_path, :method => 'get' do %>  
      <%= text_field_tag :search, params[:search], class: "search_field", :placeholder => "Search" %>
      <%= hidden_field_tag :mode, "map" %>
      <%= submit_tag "", :name => nil, class: "search_submit" %>
    <% end %>
    </div>
    <div class="float">
    <%= link_to "New restaurant", new_restaurant_path(), class: "button new_restaurant_button" %>
    </div>
  </div>
</div>
<div class="clear space_4"></div>
<div style="font-weight:bold; margin: 20px 10px; display:inline-block;">Filter by</div>
<% if @tags.count > 0 %>
  <%= link_to "All", map_path, class: "button" %>
<% end %>
<% if @tags.count > 0 %>
  <%= link_to "Unreviewed", map_tag_path("unreviewed"), class: "button" %>
<% end %>
<% @tags.each do |t| %>
  <%= link_to t.name, map_tag_path(t.name), class: "button" %>
<% end %>
<div style="float:right;font-weight:bold; margin: 10px 10px; display:inline-block;">Showing <%= @restaurants.count %> results</div>
<div class="clear space_8"></div>
<div style='width: 100%;'>
  <div id="map" style='width: 100%; height: 500px;'></div>
</div>

<script type="text/javascript">
$(document).ready(function(){
  var handler = Gmaps.build('Google',{ markers: { clusterer: { gridSize: 50, maxZoom: 13 } } });
  handler.buildMap({ internal: {id: 'map'}}, function(){
    var markers = handler.addMarkers([
      <% @restaurants.each_with_index do |r, i| %>
        <% if r.latitude and r.longitude %>
          { lat: <%=r.latitude%>, lng: <%=r.longitude%>, name: '<%=r.name%>', infowindow: '<strong><%= link_to r.name, map_restaurant_path(r) %></strong><br /><%=r.address%>' } <% if i+1 < @restaurants.count %>,<% end %>
        <% end %>
      <% end %>
    ]);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
  });
});  
</script>
